{
  "name": "wedding-website-backend",
  "version": "1.0.0",
  "description": "Backend for wedding website with RSVP and gift list functionality",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "test": "jest",
    "setup-db": "echo 'Please run the following commands manually:' && echo '1. psql -U postgres -f scripts/setup-db.sql' && echo '2. Or use pgAdmin to run the setup-db.sql script'",
    "copy-sql": "mkdir -p dist/config && cp src/config/*.sql dist/config/",
    "postbuild": "npm run copy-sql && node dist/migrate.js"
  },
  "dependencies": {
    "@types/multer": "^1.4.13",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "multer": "^2.0.1",
    "pg": "^8.11.3",
    "react-qr-code": "^2.0.17",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/helmet": "^0.0.48",
    "@types/node": "^20.19.1",
    "@types/pg": "^8.10.9",
    "@types/qrcode.react": "^1.0.5",
    "@types/uuid": "^9.0.7",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "wedding",
    "rsvp",
    "gifts",
    "express",
    "postgresql"
  ],
  "author": "Your Name",
  "license": "MIT"
}
